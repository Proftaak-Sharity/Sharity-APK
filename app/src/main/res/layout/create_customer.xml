<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/create_account_imageview"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_sharity"
            android:layout_marginTop="-15dp"
            android:contentDescription="@string/logo_sharity" />

        <TextView
            android:id="@+id/create_account_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/create_account_imageview"
            android:text="@string/create_your_sharity_account"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_account_first_name"
            style="@style/text_input_layout"
            android:hint="@string/first_name"
            app:layout_constraintTop_toBottomOf="@+id/create_account_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_account_first_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:maxLength="255"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_account_last_name"
            style="@style/text_input_layout"
            android:hint="@string/last_name"
            app:layout_constraintTop_toBottomOf="@id/create_account_first_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_account_last_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:maxLength="255"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/create_account_address_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/create_account_last_name"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_account_address"
                style="@style/text_input_layout"
                android:layout_height="match_parent"
                android:hint="@string/address"
                android:layout_width="0dp"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/create_account_house_number"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_account_address_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:singleLine="true"
                    android:maxLength="255"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_account_house_number"
                style="@style/text_input_layout"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:hint="@string/house_number_short"
                app:boxBackgroundColor="@color/white"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_account_house_number_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="4"/>

            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/create_account_postal_code_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/create_account_address_number"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_account_postal_code"
                style="@style/text_input_layout"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:hint="@string/zip_code"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintStart_toStartOf="parent" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_account_postal_code_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="6"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_account_city"
                style="@style/text_input_layout"
                android:layout_height="match_parent"
                android:hint="@string/city"
                android:layout_width="0dp"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/create_account_postal_code"
                android:layout_marginStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_account_city_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:singleLine="true"
                    android:maxLength="255"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_account_country"
            style="@style/text_input_layout"
            android:hint="@string/country"
            app:layout_constraintTop_toBottomOf="@id/create_account_postal_code_city"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_account_country_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:maxLength="255"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_account_dob"
            style="@style/text_input_layout"
            android:hint="@string/date_of_birth"
            app:layout_constraintTop_toBottomOf="@id/create_account_country"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_account_dob_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:singleLine="true"
                android:maxLength="255"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_account_phone_number"
            style="@style/text_input_layout"
            android:hint="@string/phone_number"
            app:layout_constraintTop_toBottomOf="@id/create_account_dob"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_account_phone_number_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:singleLine="true"
                android:maxLength="255"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_account_email"
            style="@style/text_input_layout"
            android:hint="@string/email"
            app:layout_constraintTop_toBottomOf="@id/create_account_phone_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_account_email_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:maxLength="255"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_account_password"
            style="@style/text_input_layout"
            android:hint="@string/password"
            app:layout_constraintTop_toBottomOf="@id/create_account_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/sharity_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_account_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLength="255"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/create_account_password_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_account_password_textview"
            app:layout_constraintTop_toBottomOf="@+id/create_account_password"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="5dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_account_password_confirm"
            style="@style/text_input_layout"
            android:hint="@string/confirm_password"
            app:layout_constraintTop_toBottomOf="@id/create_account_password_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/sharity_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_account_password_confirm_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLength="255"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/create_account_textview_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/create_account_password_confirm"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/create_account_textview_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/sharity_lightred"
                android:text="@string/login_instead"/>

            <Button
                android:id="@+id/create_account_button_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/button"
                android:text="@string/next"
                android:layout_marginTop="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>