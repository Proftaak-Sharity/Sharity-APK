<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SharityAPK" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sharity_green</item>
        <item name="colorPrimaryVariant">@color/sharity_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sharity_red</item>
        <item name="colorSecondaryVariant">@color/sharity_lightred</item>
        <item name="colorOnSecondary">@color/sharity_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/text_input_layout</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.SharityAPK.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SharityAPK.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SharityAPK.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>