<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SharityAPK" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sharity_lightred</item>
        <item name="colorPrimaryVariant">@color/sharity_lightgreen</item>
        <item name="colorOnPrimary">@color/sharity_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sharity_lightgreen</item>
        <item name="colorSecondaryVariant">@color/sharity_red</item>
        <item name="colorOnSecondary">@color/sharity_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="boxBackgroundColor">@color/sharity_lightgray</item>
    </style>
</resources>